@model IEnumerable<Eshop.Data.Product>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-light">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Image)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.ProductType)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/product/@item.Image"
                         style="width: 100px" />
                </td>

                @* <td>@Html.DisplayFor(model => item.Image)</td> *@
                <td>@Html.DisplayFor(model => item.Name)</td>
                <td>@Html.DisplayFor(model => item.Description)</td>
                <td>@Html.DisplayFor(model => item.ProductType.Name)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Xác nhận xóa?');">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Create" class="btn btn-success">Create</a>

</table>

