@model IEnumerable<Eshop.Data.Account>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-light">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Avatar)</th>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/avatar/@item.Avatar"
                         style="width: 100px" />
                </td>
                
                <td>@Html.DisplayFor(model => item.Username)</td>
                <td>@Html.DisplayFor(model => item.FullName)</td>
                <td>@Html.DisplayFor(model => item.Email)</td>
                <td>@Html.DisplayFor(model => item.Phone)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id ="@item.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Xác nhận xóa?');">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <a asp-action="Create" class="btn btn-success">Create</a>

</table>

